{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "rootDir": "./src",
    "outDir": "./dist",

    "strict": true,
    "types": ["node"],
    "esModuleInterop": true,
    "skipLibCheck": true,

    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["prisma.config.ts"]
}